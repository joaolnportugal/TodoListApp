@model ListTodoListViewModel

<div>
    <div class="row">
        <div class="col-9">
            <h1>TODO Lists</h1>
        </div>
        <div class="col-3 text-end">
            <a href="@Url.Action("new", "todolist")" class="btn btn-outline-primary mb-4">
                <span class="fas fa-plus pr-1"></span> New Todo List
            </a>
        </div>
    </div>
    @foreach (var todolist in Model.TodoLists)
    {
        <a href="@Url.Action("view", "todolist", new { id = todolist.Id})">
            <div class="card row p-4 mb-3 @todolist.ColorCssClasses">
                <div class="container row">
                    <div class="col-9">
                        <div class="fs-1">@todolist.Name</div>
                        <div class="fs-5 fst-italic">@todolist.Description</div>
                    </div>
                    <div class="col-3 text-end">Tasks: @todolist.TaskCount</div>
                </div>
            </div>
        </a>
    }
</div>
